{
  "name": "@radix-tribes/backend",
  "version": "1.0.0",
  "description": "Backend server for Radix Tribes game",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:resolve": "node resolve-migration.js",
    "db:migrate:safe": "npm run db:migrate:resolve && npm run db:migrate",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@radix-tribes/shared": "file:../shared",
    "express": "^4.19.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "@prisma/client": "^5.0.0",
    "prisma": "^5.0.0",
    "dotenv": "^16.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "tsx": "^4.0.0"
  }
}
